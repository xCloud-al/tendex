{
  "kind": "collectionType",
  "collectionName": "tenders",
  "info": {
    "singularName": "tender",
    "pluralName": "tenders",
    "displayName": "Tender",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "tender_status": {
      "type": "enumeration",
      "enum": [
        "DRAFT",
        "ACTIVE",
        "UNDER EVALUATION",
        "CLOSED"
      ],
      "required": false,
      "default": "DRAFT"
    },
    "open_date": {
      "type": "datetime"
    },
    "deadline": {
      "type": "datetime",
      "required": false
    },
    "documents": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    }
  }
}
